@tool
def summarize_text(text: str, max_words: int = 150) -> str:
    """
    Summarize long text using the Gemini Flash model.

    Args:
        text: The text to summarize.
        max_words: Target summary length.
    """

    prompt = (
        f"Summarize the following text in around {max_words} words.\n"
        f"Keep the summary clear and concise.\n\n"
        f"TEXT:\n{text}"
    )

    response = gemini_flash_latest.invoke(prompt)
    return response.content